<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8" />
  <title>Climate Solutions â€“ Projects</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
  <%- include('partials/navbar') %>

  <!-- Hero -->


  <div class="hero">
    <div class="hero-content text-center">
      <div>
        <h1 class>Climate Solution Projects</h1>
        <p class=>
          Explore projects by sector, or browse them all below.
        </p>

        <div class="flex justify-center gap-4 mt-4 flex-wrap">
          <a href="/solutions/projects?sector=Industry" class="btn btn-outline">Industry</a>
          <a href="/solutions/projects?sector=Transportation" class="btn btn-outline">Transportation</a>
          <a href="/solutions/projects?sector=Electricity" class="btn btn-outline">Electricity</a>
          <a href="/solutions/projects?sector=Land Sinks" class="btn btn-outline">Land Sinks</a>
          <a href="/solutions/projects?sector=Buildings" class="btn btn-outline">Buildings</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Projects Table -->
  <div class="container mx-auto">
    <div class>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-outline">
                  <%= project.sector %>
                </a>
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-primary">Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
