<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <title><%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="text-center">
    <div class="hero-content items-center">
      <h1 class="text"><%= project.title %></h1>
      <p class>
        Below, you will find detailed information about the project: <%= project.title %>
      </p>
    </div>
  </div>

  <div class="container mx-auto">
    <div class="card">
      <figure>
        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="mx-auto">
      </figure>
      <div class="card-body">
        <p><strong>Intro:</strong> <%= project.intro_short %></p>
        <p><strong>Impact:</strong> <%= project.impact %></p>
        <a href="<%= project.original_source_url %>" target="_blank">
        <button class="btn btn-primary">Learn More</button>
        </a>
      </div>
    </div>

    <div id="quote" class="text-center"></div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quote").innerHTML = `"${data.quote}" ${data.author}`;
        })
        .catch(() => {
          document.getElementById("quote").innerText = "Quote unavailable.";
        });
    });
  </script>
</body>
</html>
